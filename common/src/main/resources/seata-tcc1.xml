<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd"
       default-autowire="byName">

    <!-- fescar bean scanner -->
    <bean class="io.seata.spring.annotation.GlobalTransactionScanner">
        <constructor-arg value="tcc-sample"/>
        <constructor-arg value="my_test_tx_group"/>
    </bean>

    <bean id="tccActionOneImpl" class="com.system.design.seckill.common.transaction.action.impl.TccActionOneImpl"/>

    <bean id="tccActionTwoImpl" class="com.system.design.seckill.common.transaction.action.impl.TccActionTwoImpl"/>

    <bean id="tccTransactionService" class="com.system.design.seckill.common.transaction.service.TccTransactionService"/>

</beans>